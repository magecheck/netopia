<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="netopia" translate="label" sortOrder="152">
            <label>NETOPIA</label>
        </tab>
        <section id="netopia_section" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="0" showInStore="0">
            <label>General Settings</label>
            <tab>netopia</tab>
            <resource>MageCheck_Netopia::config</resource>
            <group id="configuration" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Configuration</label>
                <field id="api_url" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>API Url</label>
                    <comment>Api Connection URL</comment>
                </field>
                <field id="api_key" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>API Key</label>
                    <comment>Api Connection KEY</comment>
                </field>
                <field id="user" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>User</label>
                    <comment>Api Connection User</comment>
                </field>
                <field id="password" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Password</label>
                    <comment>Api Connection Password</comment>
                </field>
                <field id="sender" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Sender</label>
                    <comment>Api Sender Name</comment>
                </field>
                <field id="message_order_success" translate="label" type="textarea" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Message Order Success</label>
                    <comment>Api Message Format: first %s is "Lastname Firstname" the second %s is order number (increment)</comment>
                </field>
                <field id="message_create_shippment" translate="label" type="textarea" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Message Create Shippment</label>
                    <comment>Api Message Format: first %s is the delivery company the second %s is tracking number added on the shippment</comment>
                </field>
            </group>
        </section>
    </system>
</config>